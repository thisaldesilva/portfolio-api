# Environment Configuration
ENVIRONMENT={{ environment }}

# Database
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port }}/{{ db_name }}
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Polygon/Massive API
POLYGON_API_KEY={{ polygon_api_key }}

# AWS Configuration
AWS_REGION={{ aws_region | default('us-east-1') }}

# Application
APP_HOST=0.0.0.0
APP_PORT={{ app_port }}
LOG_LEVEL=INFO
WORKERS=4

# Security
SECRET_KEY={{ secret_key | default(lookup('password', '/dev/null chars=ascii_letters,digits length=64')) }}
ALLOWED_ORIGINS=http://{{ ansible_host }}:{{ app_port }},http://localhost:{{ app_port }}

# Monitoring
ENABLE_METRICS=true
