# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]

# Security
allowed_ssh_cidr = ["YOUR_IP_ADDRESS/32"] # Replace with your IP

# EC2 Configuration
instance_type = "t3.medium"
key_name      = "your-ssh-key-name" # Replace with your key pair name

# RDS Configuration
db_instance_class    = "db.t3.micro"
db_name              = "portfolio_db"
db_username          = "portfolio_admin"
db_password          = "CHANGE_ME_STRONG_PASSWORD" # Use a strong password
db_allocated_storage = 20
